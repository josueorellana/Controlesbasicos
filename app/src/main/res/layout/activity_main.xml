<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtcodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:hint="Codigo"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/txtdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtcodigo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="Descripcion"
            android:inputType="text"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/txtmarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdescripcion"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="Marca"
            android:inputType="text"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/txtpresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtmarca"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="Presentacion"
            android:inputType="text"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/txtprecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtpresentacion"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="Precio"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/txtcosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprecio"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="costo"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/txtstock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="stock"
            android:layout_below="@+id/txtcosto"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnGuardarProducto"
            android:layout_width="264dp"
            android:layout_height="65dp"
            android:layout_below="@+id/textporcentaje"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Guardar producto"
            android:textAlignment="center" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRegresarListaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="165dp"
            android:layout_height="168dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:background="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textporcentaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txtstock"
            android:hint="porcentaje"
            android:text="Porcentaje" />


    </RelativeLayout>
</ScrollView>