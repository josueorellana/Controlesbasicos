<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="always"
                    android:scrollIndicators="left|right"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="horizontal"
                    android:verticalScrollbarPosition="defaultPosition">

                </TabWidget>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tabAguaPotable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblAguaPotable"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Calcule el valor a pagar de agua potable."
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtAguaPotable"
                        android:layout_below="@+id/lblAguaPotable"
                        android:layout_marginTop="80dp"
                        android:hint="Numero de metros consumidos."
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp" />
                    <Button
                        android:id="@+id/btnAguaPotable"
                        android:layout_below="@+id/txtAguaPotable"
                        android:layout_marginTop="30dp"
                        android:text="Calcular"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabConversor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblConversorDe"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="40dp"
                        android:text="DE:"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblConversorA"
                        android:layout_below="@+id/lblConversorDe"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp"
                        android:text="A:"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spnConversorDe"
                        android:layout_below="@+id/lblConversorDe"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spnConversorA"
                        android:layout_below="@+id/lblConversorA"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtConversorCantidad"
                        android:layout_below="@+id/spnConversorA"
                        android:layout_marginTop="30dp"
                        android:hint="Cantidad a transformar"
                        android:textSize="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="10dp"/>
                    <Button
                        android:id="@+id/btnConversorConvertir"
                        android:layout_below="@+id/txtConversorCantidad"
                        android:layout_marginTop="30dp"
                        android:text="CONVERTIR"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
    </RelativeLayout>
</ScrollView>